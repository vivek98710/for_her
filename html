  <script>
    // Generate floating hearts
    for (let i = 0; i < 20; i++) {
      const h = document.createElement('div');
      h.className = 'heart';
      h.style.left = Math.random() * 100 + 'vw';
      h.style.animationDelay = Math.random() * 8 + 's';
      h.style.opacity = Math.random();
      document.body.appendChild(h);
    }
  </script>

